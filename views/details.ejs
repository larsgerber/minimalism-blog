<%- include('partials/head'); -%>

<div class="loader-wrapper">
    <div class="loader">
        <span></span>
        <span></span>
        <span></span>
    </div>
</div>

<article class="post" itemscope itemtype="http://schema.org/BlogPosting">
  <header>
      <h1 class="posttitle" itemprop="name headline">
          <%= data.title %>
      </h1>
      <div class="meta">
          <span class="author" itemprop="author" itemscope itemtype="http://schema.org/Person">
              <span itemprop="name"><%= data.expand.author.name %></span>
          </span>
          <div class="postdate">
              <time datetime="<%= data.updated_at %>" itemprop="dateUpdated">
                  <%= data.updated_local %>
              </time>
          </div>
      </div>
  </header>

  <b>Tags:</b><% if (data.expand.tag.length > 0) { %> <% data.expand.tag.forEach(post=> { %>
    <a inert href="/tags/<%= post.name %>">#<%= post.name %></a>
  <% })} %>

  <div class="content" itemprop="articleBody">
      <%- data.content %>
  </div>
  <a href="/">back</a>
</article>

<%- include('partials/footer'); -%>